@model IEnumerable<Employee_Management_System.Holiday>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"> <i class="fa fa-plus"></i> Add New Holiday</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Holidays List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body overflow-scroll">
        <table id="example1" class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                          <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i
                                    class="fa fa-edit"></i> Edit </a>
                        </td>
                        <td>

                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i
                                    class="fa fa-edit"></i> View </a>
                        </td>
                        <td>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i
                                    class="fa fa-trash"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
